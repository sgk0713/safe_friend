<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- LoginActivity -->
    <style name="LoginEmailHint">
        <item name="android:hint">@string/email_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginPasswordHint">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginRegisterBtn">
        <item name="android:text">@string/register_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginBtn">
        <item name="android:text">@string/login_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <dimen name="followerBtnTextSize">5dp</dimen>
    <dimen name="followerBtnMargin">10dp</dimen>
    <dimen name="buttonWidth">124dp</dimen>
    <dimen name="buttonHeight">36dp</dimen>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"/>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"/>
</resources>
