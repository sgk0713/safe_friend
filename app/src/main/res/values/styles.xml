<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@drawable/ic_bus</item>
    </style>

    <!-- LoginActivity -->
    <style name="LoginEmailHint">
        <item name="android:hint">@string/email_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginPasswordHint">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginRegisterBtn">
        <item name="android:text">@string/register_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginBtn">
        <item name="android:text">@string/login_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RegisterTextTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_for_signup</item>
    </style>
    <style name="RegisterCardViewMargin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <dimen name="toolbarHeight">80dp</dimen>
    <dimen name="followerBtnTextSize">5dp</dimen>
    <dimen name="followerBtnMargin">10dp</dimen>
    <dimen name="buttonWidth">124dp</dimen>
    <dimen name="buttonHeight">36dp</dimen>
    <dimen name="registerButtonHeight">29dp</dimen>
    <dimen name="process_width">160dp</dimen>
    <dimen name="process_height">20dp</dimen>
    <dimen name="process_circle">16dp</dimen>
    <dimen name="title_margin_top">115dp</dimen>
    <dimen name="button_margin_bottom">92dp</dimen>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"/>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"/>

    <style name="mainTitleSmall">
        <item name="android:fontFamily">@font/nanumsquare_r</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mainTitleBig">
        <item name="android:fontFamily">@font/nanumsquare_eb</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>

    <style name="toolbarText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nanumsquare_eb</item>
    </style>


</resources>
