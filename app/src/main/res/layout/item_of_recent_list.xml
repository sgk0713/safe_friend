<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/item_of_recent_list_station_name_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bus_station"
            android:textColor="@color/text_for_agreement"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_of_recent_list_station_id_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/station_id"
            android:textColor="@color/text_for_agreement"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/item_of_recent_remove_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:padding="4dp"
        android:layout_gravity="center"/>
</LinearLayout>