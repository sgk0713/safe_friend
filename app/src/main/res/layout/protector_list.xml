<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <android.support.design.card.MaterialCardView
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/mainColor"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/protector_list_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_pin_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/protector_list_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="south korea"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/protector_list_confirm_ll"
                android:padding="16dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/ic_accept_guard"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:textColor="@color/mainColor"
                    android:text="수락"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!--<Button-->
                <!--android:id="@+id/protector_list_confirm_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/white"/>-->
        </LinearLayout>

    </android.support.design.card.MaterialCardView>


</LinearLayout>