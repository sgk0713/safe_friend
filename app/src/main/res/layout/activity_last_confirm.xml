<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".LastConfirmActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_last_confirm_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme"
            app:elevation="0dp"
            app:titleTextColor="@color/white">

            <LinearLayout
                android:layout_width="@dimen/process_width"
                android:layout_height="@dimen/process_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/process_circle"
                    android:layout_height="@dimen/process_circle"
                    android:text="@string/one"
                    android:textSize="12sp"
                    android:textColor="@color/mainColor"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/process_circle_background"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/line_for_process"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/process_circle"
                    android:layout_height="@dimen/process_circle"
                    android:text="@string/two"
                    android:textSize="12sp"
                    android:textColor="@color/mainColor"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/process_circle_background"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/line_for_process"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/process_height"
                    android:text="@string/step_three"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_for_process"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/process_current_background" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/activity_last_confirm_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/activity_last_confirm_ll_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_last_confirm_appbar"
        app:layout_constraintVertical_chainStyle="spread">

        <View
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:background="@color/mainColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/service_name"
            android:textColor="@color/service_title"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/request_confirm"
            android:textColor="@color/mainColor"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_last_confirm_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_last_confirm_title_ll"
        app:layout_constraintEnd_toStartOf="@id/activity_last_confirm_at_tv"
        app:layout_constraintBottom_toTopOf="@id/activity_last_confirm_ll_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_un"/>
        <TextView
            android:id="@+id/activity_last_confirm_station_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/bus_station"
            android:textColor="@color/text_for_process"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="1"/>
        
    </LinearLayout>
    <TextView
        android:id="@+id/activity_last_confirm_at_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/at"
        android:textColor="@color/text_for_item_title"
        app:layout_constraintStart_toEndOf="@id/activity_last_confirm_ll_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_last_confirm_ll_1"/>

    <LinearLayout
        android:id="@+id/activity_last_confirm_ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/underline"
        app:layout_constraintTop_toBottomOf="@id/activity_last_confirm_ll_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_last_confirm_on_tv"
        app:layout_constraintBottom_toTopOf="@+id/activity_last_confirm_confirm_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_time"/>
        <TextView
            android:id="@+id/activity_last_confirm_time_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/time_sample"
            android:textColor="@color/text_for_process"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_last_confirm_on_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on"
        android:textColor="@color/text_for_item_title"
        app:layout_constraintStart_toEndOf="@id/activity_last_confirm_ll_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_last_confirm_ll_2" />
    <TextView
        android:id="@+id/activity_last_confirm_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_sentence"
        android:textColor="@color/text_for_item_title"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_last_confirm_ll_2"
        app:layout_constraintBottom_toTopOf="@id/activity_last_confirm_btn" />
    <Button
        android:id="@+id/activity_last_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textColor="@color/text_in_button"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/activity_last_confirm_confirm_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>